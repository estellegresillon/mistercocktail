<div class="container">
  <h1 class="text-center">All cocktails</h1>
  <div class="cards">
    <% @cocktails.each do |c| %>
      <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= c.image_url %>'); background-position: center;">
        <h2><%= c.name %></h2>
        <%= link_to c.name, cocktail_path(c.id), class: "card-link" %>
    </div>
  <% end %>
  </div>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn-yellow" %>
</div>

